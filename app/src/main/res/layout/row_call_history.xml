<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/_10sdp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:id="@+id/tvNationality"
                    android:visibility="gone"
                    android:fontFamily="@font/roboto_medium"
                    android:text=""
                    android:textColor="@color/theme_purple"
                    android:textSize="@dimen/_10sdp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:visibility="gone"
                    android:id="@+id/tvSessionType"
                    android:fontFamily="@font/roboto_medium"
                    android:text=""
                    android:textColor="@color/yellow"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:textSize="@dimen/_11sdp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:id="@+id/tvOrderId"
                    android:fontFamily="@font/roboto_medium"
                    android:text=""
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:textSize="@dimen/_10sdp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:id="@+id/tvUserName"
                    android:fontFamily="@font/roboto_medium"
                    android:text=""
                    android:textColor="@color/textgray"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:textSize="@dimen/_10sdp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:id="@+id/tvDateTime"
                    android:fontFamily="@font/roboto_regular"
                    android:text=""
                    android:textColor="@color/textgray"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:textSize="@dimen/_11sdp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:id="@+id/tvDuration"
                    android:fontFamily="@font/roboto_regular"
                    android:text=""
                    android:textColor="@color/textgray"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:textSize="@dimen/_10sdp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:id="@+id/tvCallRate"
                    android:fontFamily="@font/roboto_regular"
                    android:text=""
                    android:textColor="@color/textgray"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:textSize="@dimen/_10sdp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:id="@+id/Earned"
                    android:fontFamily="@font/roboto_regular"
                    android:text=""
                    android:textColor="@color/textgray"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:textSize="@dimen/_10sdp"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:fontFamily="@font/roboto_regular"
                    android:text="@string/feedback_"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:id="@+id/tvFeedback"
                    android:fontFamily="@font/roboto_regular"
                    android:text=""
                    android:textColor="@color/textgray"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:textSize="@dimen/_10sdp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:orientation="vertical">

                <RatingBar
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ratingUser"
                    android:numStars="5"
                    android:progressTint="@color/theme_purple"
                    android:scaleX="1"
                    android:scaleY="1" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:fontFamily="@font/roboto_medium"
                    android:text="@string/status"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sdp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:id="@+id/tvStatus"
                    android:fontFamily="@font/roboto_medium"
                    android:text=""
                    android:textColor="@color/textgreen"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:textSize="@dimen/_11sdp"/>
            </LinearLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_7sdp"
            android:gravity="center">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_weight="0.5"
                android:id="@+id/llSuggestRemedy"
                android:background="@drawable/white_background_rect_outline_red"
                android:orientation="horizontal"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_gravity="center"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="@string/suggest_remedy"
                    android:textColor="@color/orange"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:textSize="@dimen/_12sdp" />

            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:id="@+id/llRefundAmount"
                android:layout_weight="0.5"
                android:background="@drawable/white_background_rect_outline_red"
                android:backgroundTint="@color/yellow"
                android:orientation="horizontal"
                android:layout_margin="@dimen/_2sdp"
                android:layout_gravity="center"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:text="@string/refund_amount"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/very_light_gray"
            android:layout_marginVertical="@dimen/_10sdp" />

    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>
