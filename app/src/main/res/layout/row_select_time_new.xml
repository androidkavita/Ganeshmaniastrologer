<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginVertical="@dimen/_5sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:orientation="horizontal"
            android:weightSum="1.5">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/white_background_rect_outline_red"

                android:layout_weight="0.375"
                android:weightSum="1"

                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.35"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:fontFamily="@font/roboto_medium"
                        android:text=""
                        android:id="@+id/tvTimeFromNew"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp" />
                </LinearLayout>

                <View
                    android:layout_width="@dimen/_1sdp"
                    android:layout_height="match_parent"
                    android:background="@color/grey"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.65"
                    android:visibility="gone"

                    android:padding="@dimen/_2sdp"
                    android:weightSum="1"
                    android:orientation="vertical"
                    android:layout_gravity="right"
                    android:gravity="right">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/ivUp1"
                        android:layout_weight="0.5"

                        android:layout_gravity="center"
                        android:src="@drawable/ic_arrow_up"
                        android:padding="@dimen/_3sdp"
                        android:gravity="right"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:fontFamily="@font/roboto_medium"
                        android:text="@string/AM"
                        android:id="@+id/tv_ampm1"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp" />
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:id="@+id/ivDown1"
                        android:padding="@dimen/_3sdp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_arrow_down"
                        android:gravity="right"
                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.45"

                android:weightSum="1"
                android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:fontFamily="@font/roboto_medium"
                        android:text="@string/to"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.375"
                android:layout_marginRight="@dimen/_5sdp"
                android:background="@drawable/white_background_rect_outline_red"
                android:weightSum="1"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.35"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:fontFamily="@font/roboto_medium"
                        android:text=""
                        android:id="@+id/tvTimeToNew"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp" />
                </LinearLayout>

                <View
                    android:layout_width="@dimen/_1sdp"
                    android:layout_height="match_parent"
                    android:background="@color/grey"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.65"
                    android:visibility="gone"

                    android:padding="@dimen/_2sdp"
                    android:weightSum="1"
                    android:orientation="vertical"
                    android:layout_gravity="right"
                    android:gravity="right">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/ivUp2"
                        android:layout_weight="0.5"

                        android:layout_gravity="center"
                        android:src="@drawable/ic_arrow_up"
                        android:padding="@dimen/_3sdp"
                        android:gravity="right"
                        />

                    <TextView
                        android:id="@+id/tv_ampm2"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_gravity="center"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="center"
                        android:text="@string/AM"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp" />
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:id="@+id/ivDown2"
                        android:padding="@dimen/_3sdp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_arrow_down"
                        android:gravity="right"
                        />
                </LinearLayout>
            </LinearLayout>

















            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:layout_marginLeft="@dimen/_10sdp"
                android:background="@drawable/white_background_rect_outline_red"
                android:weightSum="1"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.35"
                    android:gravity="center"
                    android:weightSum="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_DateViewNew"
                        android:layout_width="124dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:paddingTop="@dimen/_3sdp"
                        android:layout_weight="0.5"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:layout_gravity="center"
                        android:paddingBottom="@dimen/_3sdp"

                        android:gravity="center"
                        android:fontFamily="@font/roboto_medium"
                        android:text="Remove"
                        android:id="@+id/tv_RemoveNew"
                        android:textColor="@color/red"
                        android:textSize="@dimen/_12sdp" />
                </LinearLayout>

                <View
                    android:layout_width="@dimen/_1sdp"
                    android:layout_height="match_parent"
                    android:background="@color/grey"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.65"
                    android:visibility="gone"

                    android:padding="@dimen/_2sdp"
                    android:weightSum="1"
                    android:orientation="vertical"
                    android:layout_gravity="right"
                    android:gravity="right">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/ivUp3"
                        android:layout_weight="0.5"

                        android:layout_gravity="center"
                        android:src="@drawable/ic_arrow_up"
                        android:padding="@dimen/_3sdp"
                        android:gravity="right"
                        />

                    <TextView
                        android:id="@+id/tv_ampm3"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_gravity="center"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="center"
                        android:text="@string/AM"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp" />
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:id="@+id/ivDown3"
                        android:padding="@dimen/_3sdp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_arrow_down"
                        android:gravity="right"
                        />
                </LinearLayout>
            </LinearLayout>





        </LinearLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>

</layout>
