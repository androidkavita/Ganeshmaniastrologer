<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.fragments.LiveWithTopicFragment">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:gravity="start"
            android:id="@+id/llProduct"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="19dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Topic"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />

            </LinearLayout>

            <EditText
                android:id="@+id/etTopic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:fontFamily="@font/roboto_regular"
                android:background="@drawable/focus"
                android:elevation="@dimen/_5sdp"
                android:hint="write your topic..."
                android:inputType="text"
                android:imeOptions="actionDone"
                android:padding="@dimen/_12sdp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp" />


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="@dimen/_10sdp"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/intake_form"
                    android:textColor="@color/black">


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="@dimen/_50sdp"
                        app:cardCornerRadius="@dimen/_15sdp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:alpha="0.5"
                            android:layout_gravity="center">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="280dp"
                                android:layout_centerInParent="true"
                                android:layout_gravity="center"
                                android:background="@color/grey"
                                android:gravity="center"
                                android:scaleType="fitXY" />

                            <ImageView
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="@dimen/_50sdp"
                                android:layout_gravity="center"
                                android:layout_centerInParent="true"
                                android:gravity="center"
                                android:scaleType="fitXY"
                                android:src="@drawable/scancamera" />

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </FrameLayout>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnGoLive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button"
                android:text="Go Live"
                android:fontFamily="@font/roboto_medium"
                android:layout_gravity="center"
                android:textColor="@color/theme_purple"
                android:textSize="@dimen/_12sdp"
                android:textAllCaps="false"
                android:layout_marginBottom="@dimen/_20sdp"
                android:paddingHorizontal="@dimen/_60sdp"
                android:paddingVertical="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_25sdp" />
        </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </FrameLayout>
</layout>